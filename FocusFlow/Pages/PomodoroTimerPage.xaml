<Page x:Class="FocusFlow.Pages.PomodoroTimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FocusFlow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PomodoroTimerPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>




        <TextBlock Grid.Column="0" Name="Passed"  
                   Text="{Binding Passed}" FontSize="45" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="10"/>


        <Button Height="50" Width="90" Grid.Row="1" VerticalAlignment="Top"
                Margin="0, 50, 100, 0" Content="Pause" Click="Pause"/>
        
        <Button Height="50" Width="70" Grid.Row="1" VerticalAlignment="Top"
                Margin="100, 50, 0, 0" Content="Skip" Click="Skip"/>


        <ProgressBar x:Name="TimerProgressBar"
                     Minimum="0"
                     Maximum="1500"
                     Height="30"
                     VerticalAlignment="Top"
                     Margin="30,150,30,0" Grid.Row="1" Grid.ColumnSpan="2"
                     />

        

    </Grid>
</Page>
