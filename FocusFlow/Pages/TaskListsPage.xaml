<Page x:Class="FocusFlow.Pages.TaskListsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FocusFlow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskListsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="643*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="342*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>

        <Button Content="Change completion" Click="MarkTaskComplete" Grid.Column="2" Grid.Row="2" FontSize="10" Margin="2,15,2,15"/>
        <Button Content="Start Timer" Click="StartTimer" Grid.Column="2" 
                Grid.Row="1" FontSize="10" Margin="2,130,2,130" Background="BlueViolet" Foreground="White"/>

        <ListView ItemsSource="{Binding LoadedItems}" Grid.Row="1" Grid.Column="1" Name="TaskList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Priority" Width="100" DisplayMemberBinding="{Binding Priority}"/>
                    <GridViewColumn Header="Completed" Width="90" DisplayMemberBinding="{Binding IsDone}"/>
                    <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding Id}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Button Content="Add" Height="30" Margin="2,2,2,10" Click="AddNewTask"/>
            <Button Content="Remove" Height="30" Margin="2,7,2, 2"/>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="196*"/>
                <ColumnDefinition Width="253*"/>
                <ColumnDefinition Width="212*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock Text="Title" FontSize="10" Foreground="Black" Margin="7,2, 30, 0"/>
                <TextBox Name="TitleBox" Margin="7, 12, 2, 0" Height="40"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Description" FontSize="10" Foreground="Black" Margin="7,2, 30, 0"/>
                <TextBox Name="DescBox" Margin="7, 12, 2, 0" Height="40"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="2">
                <TextBlock Text="Priority" FontSize="10" Foreground="Black" Margin="7,2, 30, 0"/>
                <ComboBox Width="200" Height="30" SelectedIndex="0" Margin="7, 12, 2, 0" Name="PriorityChosen">
                    <ComboBoxItem Content="Low" />
                    <ComboBoxItem Content="Medium" />
                    <ComboBoxItem Content="High" />
                </ComboBox>
            </StackPanel>



        </Grid>
    </Grid>
</Page>
